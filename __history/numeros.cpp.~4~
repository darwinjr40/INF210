double serie1 (int n){
 double resultado;
 if (n == 0) {
	 resultado = 0;
 } else if (n == 1) {
		ShowMessage(String((n+1)*2+1) + String(pow(2,double(n))));
		 resultado = ((n+1)*2+1) / (pow(2,double(n)));    //5/2 = 2     5.0/2 = 2.5
 } else {
		ShowMessage(String((n+1)*2+1) + String(pow(2,double(n))));
	 resultado =  ((n+1)*2+1) / (pow(2,double(n))) + serie1(n-1);
 }
  return resultado;
}



